
{{#partial "content"}}
<div class="container">
    <h2>CREATE A NEW HERO</h2>
    <form action="/heros" method="post">
        <div class="form-group">
            <label for="heroName">Name</label>
            <input type="text" class="form-control" name="heroName" id="heroName" placeholder="Name of the hero" required>
        </div>

        <div class="form-group">
            <label for="heroAge">Age</label>
            <input type="number" class="form-control" name="heroAge" id="heroAge" placeholder="Age of the hero" required>
        </div>

        <div class="form-group">
            <label for="heroPower">Power</label>
            <input type="text" class="form-control" name="heroPower" id="heroPower" placeholder="Hero's Power" required>
        </div>

        <div class="form-group">
            <label for="heroWeakness">Weakness</label>
            <input type="text" class="form-control" name="heroWeakness" id="heroWeakness" placeholder="Hero's Weakness" required>
        </div>

        <button type="submit" class="btn btn-info my-2 my-sm-0">Generate The Hero</button>
    </form>
</div>

{{/partial}}

