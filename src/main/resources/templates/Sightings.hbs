
{{#partial "content"}}
    <div class="container">
        <div class="row">

    <div class = "view animals">
    {{#if allsightings}}
        {{#each allsightings}}
        <div class="col-sm-3">

                <div class="card-body text-white bg-dark mb-5" style="width: 18rem;">
                    <h4 class="card-title">{{animalName}}</h4><hr>
                    <p class="card-text">{{animalType}}</p>
                    <p class="card-text">{{locationName}}</p>
                    <p class="card-text">{{rangerName}}</p>
                    <p class="card-text">{{sightedAt}}</p>


                </div>
            </div>
        {{/each}}
    {{else}}
        <h2>No animals! Create some animals <a href="/SightingForm">here</a></h2>
    {{/if}}
    </div>
    </div>
        </div>

{{/partial}}

{{>layout.hbs}}